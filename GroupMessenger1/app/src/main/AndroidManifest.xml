<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.buffalo.cse.cse486586.groupmessenger1"
    android:versionCode="1"
    android:versionName="1.0" >

    <!--For Socket programming support-->
    <!--Reference : Project 1-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.buffalo.cse.cse486586.groupmessenger1.GroupMessengerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider android:name="edu.buffalo.cse.cse486586.groupmessenger1.GroupMessengerProvider"
            android:authorities="edu.buffalo.cse.cse486586.groupmessenger1.provider" />
    </application>

</manifest>